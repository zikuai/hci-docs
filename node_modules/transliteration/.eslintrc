{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "func-names": 0,
    "global-require": 0,
    "no-param-reassign": 0,
    "no-restricted-syntax": [0, "ForInStatement"],
    "guard-for-in": 0,
    "max-len": [1, 120],
    "import/no-extraneous-dependencies": 0,
    "import/no-dynamic-require": 0,
    "import/extensions": 0,
    "no-bitwise": 1,
    "no-plusplus": 0
  }
}
